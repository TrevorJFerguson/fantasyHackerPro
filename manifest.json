{
    "manifest_version": 3,
    "name": "FantasyHacksPro", 
    "description": "Quickly compare your ESPN fantasy draft to the ADP for your players",
    "version": "0.0.0", 
    "icons": {
        "16": "images/matrix128.png",
        "128": "images/matrix128.png"
    },
    "action": {
        "browser_style": true,
        "default_icon": {
            "16": "images/matrix128.png"
        },
        "default_title": "FantasyHacksPro",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs"
    ],
    "host_permissions": [
        "https://www.fantasypros.com/*",
        "https://fantasy.espn.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}